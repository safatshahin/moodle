{{!
    @template core/course_progress

    Course progress bar for the course header.

    Example context (json):
    {
        "label": "Course Progress",
        "percentage": 35,
        "percentageformatted": "35%"
    }
}}
<div class="course-progress pb-3 ps-3" data-region="course-progress">
    <div class="d-flex align-items-center justify-content-between mb-2">
        <span class="fw-semibold">{{label}}</span>
        <span class="fw-semibold">{{percentageformatted}}</span>
    </div>
    <div class="progress">
        <div
            class="progress-bar bg-secondary"
            role="progressbar"
            style="width: {{percentage}}%;"
            aria-valuenow="{{percentage}}"
            aria-valuemin="0"
            aria-valuemax="100"
        ></div>
    </div>
</div>
