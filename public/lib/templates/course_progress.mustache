{{!
    @template core/course_progress

    This template renders the course progress bar in the course header.

    Example context (json):
    {
        "progress": 35
    }
}}
<div class="course-progress mb-4" data-region="course-progress">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <strong>{{#str}}courseprogress, completion{{/str}}</strong>
        <span class="fw-bold">{{progress}}%</span>
    </div>
    <div class="progress" style="height: 1rem;">
        <div class="progress-bar bg-secondary"
            role="progressbar"
            style="width: {{progress}}%;"
            aria-label="{{#str}}courseprogress, completion{{/str}}"
            aria-valuenow="{{progress}}"
            aria-valuemin="0"
            aria-valuemax="100"></div>
    </div>
</div>
